@model IEnumerable<Projekat_Dnevnik.Models.Email_Adresa>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="container">

    @foreach (var item in Model)
    {
        <ul class="list-group">
            <li class="list-group-item active">Email</li>
            
            <li class="list-group-item">Ime i prezime: @Html.DisplayFor(modelItem => item.Ucenik.Ime) @Html.DisplayFor(modelItem => item.Ucenik.Prezime)</li>
           
            <li class="list-group-item">Email: @Html.DisplayFor(modelItem => item.Adresa)</li>

            <li class="list-group-item">Vrsta Adrese: @Html.DisplayFor(modelItem => item.Vrsta_Email.Ime_OznakeMail)</li>

            <li class="list-group-item text-center"> @Html.ActionLink("Edit", "Edit", new { id = item.IDOsobe }) </li>
        </ul>
    }

</div>
